<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Photy.Views"
             xmlns:viewModels="clr-namespace:Photy.ViewModels.Implementations;assembly=Photy.ViewModels"
             Name="Photy"
             x:Class="Photy.App">
    
    <Application.DataTemplates>
        <views:ViewLocator />
    </Application.DataTemplates>
    
    <Design.DataContext>
        <!-- ReSharper disable once Xaml.ConstructorWarning -->
        <viewModels:MainWindowViewModel />
    </Design.DataContext>
    
    <Application.Styles>
        <FluentTheme Mode="Light"/>
    </Application.Styles>
</Application>
